<controls:FancyWindow xmlns="https://spacestation14.io"
               xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
               Title="Canvas"
               Resizable="False"
               SetSize="1210 700"
               MinSize="1210 700">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Name="ColorSelector" Orientation="Horizontal" Align="Center">
        </BoxContainer>
        <BoxContainer Orientation="Horizontal" Align="Center" Margin="0 8 0 8">
            <Label Text="Cor selecionada:" Margin="0 0 8 0"/>
            <Button Name="ColorPreview" Text="Cor" Margin="8 0 0 0" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal" Margin="0 0 0 8">
            <LineEdit Name="Search" PlaceHolder="Paint Code" HorizontalExpand="True" />
            <Button Name="ImportButton" Text="Import" Margin="8 0 0 0" />
            <Button Name="ExportButton" Text="Export" Margin="8 0 0 0" />
            <Button Name="FinalizeButton" Text="Finalize" Margin="8 0 0 0" />
        </BoxContainer>
        <ScrollContainer VerticalExpand="True">
            <BoxContainer Name="Grids" Orientation="Vertical" Align="Center">
            </BoxContainer>
        </ScrollContainer>
    </BoxContainer>
</controls:FancyWindow>
